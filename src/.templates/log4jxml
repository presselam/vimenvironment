<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight\{%d\{HH:mm:ss.SSS\} %-5level - %msg%n\}\{FATAL=red, ERROR=red bold, WARN=yellow bold, INFO=white, DEBUG=green, TRACE=blue\}"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="$\{env:LOG_LEVEL:-info\}">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
